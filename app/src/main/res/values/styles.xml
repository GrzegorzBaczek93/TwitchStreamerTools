<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="SingInWithButton" parent="Widget.MaterialComponents.Button.TextButton.IconButton">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Widget.Button</item>
        <item name="android:backgroundTintMode">multiply</item>
        <item name="iconPadding">@dimen/margin_small</item>
        <item name="iconTintMode">multiply</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

</resources>

